# Environment variables for Mental Health Chatbot
# Copy this file to .env and fill in your actual API keys

# Hugging Face API Token (required)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACEHUB_API_TOKEN=your_huggingface_token_here

# Pinecone API Key (required)
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone Environment (required)
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Optional: Pinecone Index Name (defaults to 'mental-health-chatbot')
PINECONE_INDEX_NAME=mental-health-chatbot

# Voice Features API Keys (Optional)
# ElevenLabs API Key for premium text-to-speech
# Get from: https://elevenlabs.io/
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# Groq API Key for speech-to-text (Whisper)
# Get from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here
